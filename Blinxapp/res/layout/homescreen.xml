<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent"
   >

   <RelativeLayout
   android:id="@+id/topheader"
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"
   android:background="@drawable/rounded_corner"
   android:paddingTop="5dip"
   android:paddingBottom="5dip"
   >
    
    <TextView 
      android:id="@+id/name"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:hint="Next Event: Armin Van Buuren(JHB)14 June 2014" 
      android:textSize="@dimen/hometitle"
      android:gravity="center"
      android:textStyle="bold"
       />
     <LinearLayout
      android:id="@+id/mintext"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/name"
      android:layout_alignParentLeft="true"
      android:background="@drawable/blk_bg"
      android:weightSum="9"
      android:paddingTop="10dip"
      android:orientation="horizontal">
      >
      <TextView
      android:id="@+id/minutes"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="2.8"
      android:orientation="vertical"
      android:textSize="@dimen/hometitle"
      android:text="DAYS"
      android:layout_marginRight="10dip"
      android:textColor="#FFFFFF"
      android:gravity="center"
      />   
      <TextView
      android:id="@+id/hours"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="2.8"
      android:orientation="vertical"
      android:text="HOURS"
      android:layout_marginRight="10dip"
      android:textSize="@dimen/hometitle"
      android:textColor="#FFFFFF"
      android:gravity="center"
      />   
      <TextView
      android:id="@+id/daystext"    
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="2.8"
      android:orientation="vertical"
      android:text="MINUTES"
      android:textSize="@dimen/hometitle"
      android:textColor="#FFFFFF"
      android:gravity="center"
      />   
    </LinearLayout>
    
     <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/name"
      android:layout_marginTop="25dip"
      android:layout_marginLeft="10dip"
      android:layout_alignParentLeft="true"
      android:weightSum="9"
      android:orientation="horizontal">
      >
      <EditText
      android:id="@+id/minutes"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="2.8"
      android:orientation="vertical"
      android:textSize="@dimen/hometitle"
      android:background="@drawable/date_bg"
      android:text="30"
      android:layout_marginRight="10dip"
      android:textColor="#FFFFFF"
      android:gravity="center"
      />   
      <EditText
      android:id="@+id/hours"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="2.8"
      android:orientation="vertical"
      android:text="30"
      android:background="@drawable/date_bg"
      android:layout_marginRight="10dip"
      android:textSize="@dimen/hometitle"
      android:textColor="#FFFFFF"
      android:gravity="center"
      />   
      <EditText
      android:id="@+id/daystext"    
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="2.8"
      android:orientation="vertical"
      android:text="30"
      android:background="@drawable/date_bg"
      android:textSize="@dimen/hometitle"
      android:textColor="#FFFFFF"
      android:gravity="center"
      />   
    </LinearLayout>
    </RelativeLayout>
    <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_below="@id/topheader"
      android:layout_alignParentLeft="true"
      android:paddingTop="8dip"
      android:paddingBottom="8dip"
      android:weightSum="9"
      android:orientation="horizontal">
      
      <LinearLayout
      android:layout_width="0dp"
      android:layout_height="fill_parent"
      android:weightSum="1"
      android:layout_weight="2.8"
      android:paddingTop="8dip"
      android:paddingBottom="8dip"
      android:orientation="vertical">
        
      <Button
        android:id="@+id/findexp"
        android:layout_width="match_parent"
        android:background="@drawable/rounded_corner"
        android:layout_height="0dip"
        android:gravity="center"
        android:layout_weight=".7"
        android:textSize="@dimen/hometitle"
        android:text="Find Experience" />
      
      <Button
        android:id="@+id/setting"
        android:layout_marginTop="5dip"
        android:layout_width="match_parent"
        android:background="@drawable/rounded_corner"
        android:layout_height="0dip"
        android:gravity="center"
        android:layout_weight=".3"
        android:textSize="@dimen/hometitle"
        android:text="Setting" />
      
      </LinearLayout>  
      
      <LinearLayout
      android:layout_width="0dp"
      android:layout_height="fill_parent"
      android:weightSum="1"
      android:layout_weight="3.4"
      android:padding="8dip"
      android:orientation="vertical">
        
      <Button
        android:id="@+id/recommendations"
        android:layout_width="match_parent"
        android:background="@drawable/rounded_corner"
        android:layout_height="0dip"
        android:gravity="center"
        android:layout_weight=".5"
       android:textSize="@dimen/hometitle"
        android:text="Recommendations" />
      
      <Button
        android:id="@+id/find_entertainer"
        android:layout_width="match_parent"
        android:layout_marginTop="5dip"
        android:background="@drawable/rounded_corner"
        android:layout_height="0dip"
        android:gravity="center"
        android:layout_weight=".5"
        android:textSize="@dimen/hometitle"
        android:text="Find Entertainer" />
      
      </LinearLayout>  
      
      <LinearLayout
      android:layout_width="0dp"
      android:layout_height="fill_parent"
      android:weightSum="1"
     android:paddingTop="8dip"
      android:paddingBottom="8dip"
      android:layout_weight="2.8"
      android:orientation="vertical">
        
      <Button
        android:id="@+id/diary"
        android:layout_width="match_parent"
        android:background="@drawable/rounded_corner"
        android:layout_height="0dip"
        android:gravity="center"
        android:layout_weight=".5"
        android:textSize="@dimen/hometitle"
        android:text="Diary" />
      
      <Button
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:background="@drawable/rounded_corner"
        android:layout_height="0dip"
        android:layout_marginTop="5dip"
        android:gravity="center"
        android:layout_weight=".5"
        android:textSize="@dimen/hometitle"
        android:text="Search" />
      
      </LinearLayout>  
        
    </LinearLayout>
    
</RelativeLayout>
