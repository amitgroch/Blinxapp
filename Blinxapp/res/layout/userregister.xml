<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:whatever="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="5dip"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" 
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:weightSum="100"
        android:layout_weight=".16"
        android:orientation="horizontal" >
        
        <TextView
	        android:id="@+id/userlogin"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="40"
	        android:gravity="center_vertical"
	        android:layout_marginRight="30dip"
	        android:textSize="@dimen/needTaxiSize"
	        android:text="Full Name" />
        
       		<com.andreabaccega.widget.FormEditText
       		whatever:testType="alpha"
	        android:id="@+id/fullname"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="60"
	        android:background="@drawable/rounded_corner"
	        android:textSize="@dimen/needTaxiSize"
	        android:text="" />
       

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:weightSum="100"
        android:layout_weight=".16"
        android:orientation="horizontal" >
        
        <TextView
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="40"
	        android:gravity="center_vertical"
	        android:layout_marginRight="30dip"
	        android:textSize="@dimen/needTaxiSize"
	        android:text="User Name" />
        
        <com.andreabaccega.widget.FormEditText
            whatever:testType="alphaNumeric"
	        android:id="@+id/username"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="60"
	        android:background="@drawable/rounded_corner"
	        android:textSize="@dimen/needTaxiSize"
	        android:text="" />
       

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/contentBody"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:weightSum="100"
        android:layout_weight=".16"
        android:orientation="horizontal" >
        
        <TextView
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="40"
	        android:gravity="center_vertical"
	        android:layout_marginRight="30dip"
	        android:textSize="@dimen/needTaxiSize"
	        android:text="Password" />
        
        <com.andreabaccega.widget.FormEditText
            whatever:testType="nocheck"
	        android:id="@+id/password"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="60"
	        android:password="true" 
	        android:background="@drawable/rounded_corner"
	        android:textSize="@dimen/needTaxiSize"
	        android:text="" />
       

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:weightSum="100"
        android:layout_weight=".16"
        android:orientation="horizontal" >
        
        <TextView
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="40"
	        android:gravity="center_vertical"
	        android:layout_marginRight="40dip"
	        android:textSize="@dimen/needTaxiSize"
	        android:text="Email" />
        
         <com.andreabaccega.widget.FormEditText
            whatever:testType="email"
	        android:id="@+id/emailid"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="60"
	        android:background="@drawable/rounded_corner"
	        android:textSize="@dimen/needTaxiSize"
	        android:text="" />
       

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight=".16"
        android:orientation="horizontal" >
        
        <TextView
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="40"
	        android:gravity="center_vertical"
	        android:layout_marginRight="40dip"
	        android:textSize="@dimen/needTaxiSize"
	        android:text="Province" />
        
        <Spinner
	        android:id="@+id/province"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="60"
	        android:textSize="@dimen/needTaxiSize"
	        android:entries="@array/province_arrays"
        	android:prompt="@string/province_prompt"  />
        
       

    </LinearLayout>
    
     <Button
        android:id="@+id/register"
        android:layout_marginTop="40dip"
        android:layout_width="match_parent"
        android:background="@drawable/rounded_corner"
        android:layout_height="0dip"
        android:layout_alignParentBottom="true"
        android:layout_weight=".16"
        android:textSize="@dimen/needTaxiSize"
        android:text="Register" />
    

</LinearLayout>
